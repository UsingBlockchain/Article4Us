{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./build/",
      "strict": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false
    },
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }